#AddToCartText {
	font-family: 'Roboto condensed',sans-serif;
	letter-spacing: 0em;
	font-weight: 600;
	font-size: 23px;
}

#BuyNowText {
	font-family: 'Roboto condensed',sans-serif;
	letter-spacing: 0em;
	font-weight: 600;
	font-size: 23px;
}

#ProductPrice {
	font-size: 28px;
	padding: 0;
  color: #c83619;
  font-weight: bold;
  font-family: 'Roboto', sans-serif;
}

#ComparePrice {
  font-size: 16px;
  font-family: 'Roboto Condensed', sans-serif;
}

.site-header {
	background: transparent;
	-webkit-box-shadow: none;
    -moz-box-shadow: none;
	box-shadow: none; 
}

.header-wrapper {
	-webkit-box-shadow: none;
    -moz-box-shadow: none;
	box-shadow: none; 
}

.site-nav--has-dropdown>a {
	color: #7d304e;
	font-family: 'Roboto Condensed', sans-serif;
	font-size: 18px;
	text-transform: uppercase;
}

.sign-in {
	border: 1px solid #7d304e;
	&:hover {
		border: 1px solid #7d304e;
    background-color: #7d304e0d;
	}
}

a.site-nav__link--icon {
    color: #7d304e;
}

a.site-nav__link {
  font-family: 'Roboto Condensed', sans-serif;
  font-weight: normal;
  font-style: normal;
  text-transform: uppercase;
  font-size: 18px;
	&:hover {
		color: #b03766;
	  font-family: 'Roboto Condensed', sans-serif;
	  font-weight: normal;
	  font-style: normal;
	  text-transform: uppercase;
	  font-size: 18px;
	}
}

.breadcrumb a {
    color: #7d304e;
}

.product-single__title {
	font-family: 'Roboto Condensed', sans-serif;
	font-weight: normal;
	/*text-transform: uppercase;*/
}

.product_text {
    font-size: 16px;
    color: #555;
    font-family: 'Roboto Condensed', sans-serif;
}

@media screen and (min-width: 769px) {
  .site-header__logo .site-header__logo-link, .site-header__logo .logo--inverted {
		width: 136px !important;
		position: relative;
		top: 6px;
		left: -25px;
  }
	.site-header__logo img, .logo--inverted img {
	  min-width: 100%;
	}
}

@media only screen and (max-width: 590px) {
  .logo-mob {
    display: inline-block;
    position: absolute;
    top: 12px;
    width: 120px;
  }
  
  .site-header__logo img {
    max-height: none; 
    margin-top: 0px;
    position: absolute;
    top: -2px;
    height: 33px;
  }
}